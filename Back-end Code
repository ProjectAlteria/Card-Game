from random import randint
class Card:
    def __init__(self, name, points):
        self.name = name
        self.points = points

    def show(self):
        ship_1 = Card('HMS Beagle', '19')
        ship_2 = Card('SSS Sequioa', '20')
        print('{}{}'.format(self.points, self.name))
