# Mapping coordinates like A1 -> (0, 0), B2 -> (1, 1), etc.
def coord_to_index(coord):
    row_map = {'A': 0, 'B': 1, 'C': 2, 'D': 3}
    row = row_map[coord[0].upper()]
    col = int(coord[1]) - 1
    return row, col

